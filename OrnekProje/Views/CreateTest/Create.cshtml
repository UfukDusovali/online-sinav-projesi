        </div>


        <button class="col-md-10 btn btn-danger">Ekle</button>
    </div>

}

<script src="~/Scripts/jquery-3.1.1.min.js"></script>


<script type="text/javascript">
    $(document).ready(function () {

        $('#drpTempQuestion1').change(function () {
            var deger1 = $('#drpTempQuestion1').val();
            var Baslik1 = $("#"+deger1+"").val()
            $('#cevap1').val(Baslik1);
        });
        $('#drpTempQuestion2').change(function () {
            var deger2 = $('#drpTempQuestion2').val();
            var Baslik2 = $("#" + deger2 + "").val()
            $('#cevap3').val(Baslik2);
        });
        $('#drpTempQuestion3').change(function () {
            var deger3= $('#drpTempQuestion3').val();
            var Baslik3 = $("#" + deger3 + "").val()
            $('#cevap3').val(Baslik3);
        });
        $('#drpTempQuestion4').change(function () {
            var deger4 = $('#drpTempQuestion4').val();
            var Baslik4 = $("#" + deger4 + "").val()
            $('#cevap4').val(Baslik4);
        });

        $('#drpTempQuestion').change(function () {
            var getId = $('#drpTempQuestion').val();
            $.post("@Url.Action("icerikal", "CreateTest")", { id: getId }, function (data) {
                $('#textarea').html("");
                $('#textarea').html(data.substring(0, 500));
            });

            var deger = $('#drpTempQuestion').val();
            var Baslik = $("#drpTempQuestion option[value=" + deger + "]").text();
            $('#baslik').val(Baslik);
         
   

        });
    });


</script>